<% if current_user.visit?(frame) %>
  <%= form_tag(relationship_path(frame.id), method: :delete) do %>
    <%= hidden_field_tag :frame_id, frame.id %>
    <%= hidden_field_tag :type, 'Visit' %>
    <%= button_tag(type: "submit", class: "btn btn-success") do %>
      <%= fa_icon 'check-circle fa-fw', text: 'いったよ' %>
    <% end %>
  <% end %>
<% else %>
  <%= form_tag(relationships_path) do %>
    <%= hidden_field_tag :frame_id, frame.id %>
    <%= hidden_field_tag :type, 'Visit' %>
    <%= button_tag(type: "submit", class: "btn btn-default") do %>
      <%= fa_icon 'check-circle fa-fw', text: 'いったよ' %>
    <% end %>
  <% end %>
<% end %>


